@model tourneyapp.Models.User;
@{
    Layout = "~/Views/Shared/Layouts/_Blank.cshtml";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card p-4 shadow-lg" style="width: 100%; max-width: 400px;">
    <h4 class="text-center">Login</h4>
    <form action="@Url.Action("Authenticate", "Auth")" method="POST" class="space-y-2">
      @Html.AntiForgeryToken()
      <input type="hidden" name="returnUrl" value="@ViewData["returnUrl"]" />

      <div class="text-red-500 text-sm">
        @Html.ValidationSummary(false)
      </div>

      <div class="mb-2">
        <label asp-for="Email" class="form-label">Email</label>
        <input type="email" id="email" name="email" required
          class="form-control"> 
      </div>
      <div class="mb-2">
        <label asp-for="Password" class="form-label">Password</label>
        <input type="password" id="password" name="password" required
          class="form-control"> 
      </div>
      <div class="mb-2 form-check">
        <input type="checkbox" class="form-check-input" id="rememberMe">
        <label class="form-check-label" for="rememberMe">Remember me</label>
      </div>
      <button type="submit" class="btn btn-primary w-100">Sign In</button>
      <div class="mt-3 text-center">
        Don't have an account?
        <a class="text-decoration-none" asp-asp-area="" asp-controller="Auth" asp-action="Register"> Sign Up</a>
      </div>
    </form>
  </div>
</div>

