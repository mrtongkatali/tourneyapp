@model tourneyapp.Models.User;
@{
  Layout = "~/Views/Shared/Layouts/_Blank.cshtml";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card p-4 shadow-lg" style="width: 100%; max-width: 400px;">
    <h4 class="text-center">Create new account</h4>
    <form action="@Url.Action("RegisterNewAccount", "Auth")" method="POST" class="space-y-2">
      @Html.AntiForgeryToken()
      <input type="hidden" name="returnUrl" value="@ViewData["returnUrl"]" />

      <div class="text-red-500 text-sm">
        @Html.ValidationSummary(false)
      </div>

      <div class="mb-2">
        <label asp-for="Email" class="form-label">Email</label>
        <input type="text" id="Email" name="Email"
          class="form-control">
        @* <span asp-validation-for="Email" class="text-red-500 text-sm"></span> *@
      </div>
      <div class="mb-2">
        <label asp-for="Password" class="form-label">Password</label>
        <input type="password" id="Password" name="Password" required
          class="form-control"> 
      </div>
      <div class="mb-2">
        <label for="confirmPassword" class="form-label">Confirm Password</label>
        <input type="password" id="confirmPassword" name="confirmPassword" required
          class="form-control">
        @* <span asp-validation-for="Password" class="text-red-500 text-sm"></span> *@
      </div> 
      <button type="submit" class="btn btn-primary w-100">Register</button>
      <div class="mt-3 text-center">
        Already have an account? 
        <a class="text-decoration-none" asp-area="" asp-controller="Auth" asp-action="Index"> Sign In</a>
      </div>
    </form>
  </div>
</div>