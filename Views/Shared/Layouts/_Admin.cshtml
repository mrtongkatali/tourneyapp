<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>

<body class="bg-gray-100 min-h-screen">
  <!-- Sidebar -->
  <div class="flex h-screen">
    <aside class="w-64 bg-gray-800 text-white flex-shrink-0">
      <div class="p-4 text-center font-bold text-lg border-b border-gray-700">
        Admin Panel
      </div>
      <nav class="mt-4">
        <ul>
          <li><a href="#" class="block py-2 px-4 hover:bg-gray-700">Dashboard</a></li>
          <li><a href="#" class="block py-2 px-4 hover:bg-gray-700">Users</a></li>
          <li><a href="#" class="block py-2 px-4 hover:bg-gray-700">Settings</a></li>
          <li><a href="#" class="block py-2 px-4 hover:bg-gray-700">Reports</a></li>
        </ul>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 flex flex-col">
      <!-- Header -->
      <header class="bg-white shadow p-4 flex items-center justify-between">
        <h1 class="text-xl font-bold text-gray-800">Dashboard</h1>
        <button class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
          Logout
        </button>
      </header>

      <!-- Content Area -->
      <section class="p-4 flex-1">
        <!-- Stats -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="bg-white p-4 rounded shadow">
            <h2 class="text-gray-500">Total Users</h2>
            <p class="text-2xl font-bold">1,024</p>
          </div>
          <div class="bg-white p-4 rounded shadow">
            <h2 class="text-gray-500">Sales</h2>
            <p class="text-2xl font-bold">$12,345</p>
          </div>
          <div class="bg-white p-4 rounded shadow">
            <h2 class="text-gray-500">Tickets</h2>
            <p class="text-2xl font-bold">123</p>
          </div>
        </div>

        <!-- Table -->
        <div class="mt-8 bg-white rounded shadow p-4">
          <h3 class="text-lg font-bold mb-4">Recent Activity</h3>
          <table class="w-full border-collapse border border-gray-200">
            <thead>
              <tr class="bg-gray-100">
                <th class="border border-gray-200 p-2 text-left">Name</th>
                <th class="border border-gray-200 p-2 text-left">Email</th>
                <th class="border border-gray-200 p-2 text-left">Role</th>
                <th class="border border-gray-200 p-2 text-left">Status</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="border border-gray-200 p-2">John Doe</td>
                <td class="border border-gray-200 p-2">john@example.com</td>
                <td class="border border-gray-200 p-2">Admin</td>
                <td class="border border-gray-200 p-2">Active</td>
              </tr>
              <tr class="bg-gray-50">
                <td class="border border-gray-200 p-2">Jane Smith</td>
                <td class="border border-gray-200 p-2">jane@example.com</td>
                <td class="border border-gray-200 p-2">User</td>
                <td class="border border-gray-200 p-2">Pending</td>
              </tr>
            </tbody>
          </table>
        </div>
      </section>
    </main>
  </div>

  @RenderBody()
</body>
</html>
